{% extends "base.html.twig" %}
{% block title %}Details{% endblock %}

{% block body %}

<body>
    <section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                
                <div class="row">

                    <img class="mx-auto" src=" img/Image.jpg " alt="">
                </div>
            </div>
        </div>
        <div class="product__details__content">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            <h4> {{Details.Nom}} </h4>
                            
                            <h3> {{Details.Prix|number_format(0,',', '.' ) }} Ar </h3>
                            <p> {{Details.Description}} </p>
                            
                            <div class="product__details__cart__option">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        <input type="text" value=" {{Details.Quantite}} ">
                                    </div>
                                </div>
                                <a href=" {{ path('add_cart', {id:Details.id}) }} " class="primary-btn">add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
{% endblock %}
