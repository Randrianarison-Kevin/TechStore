<title>
    {% block title %}Login{% endblock %}
</title>
<link rel="stylesheet" href="css/login.css">

<link rel="stylesheet" href="css/bootstrap.min.css">
{% block body %}    
<div class="wrapper">
   <form action=" {{path('app_login')}} "  method="post" class="form-signin">
      <h2 class="form-signin-heading">Login</h2>
      <input type="text" class="form-control" name="_email" placeholder="Email" for="email" /><br>
      <input type="password" class="form-control" name="_password" placeholder="Password" for="password"/>     
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>   
   </form>
</div>
{% endblock %}